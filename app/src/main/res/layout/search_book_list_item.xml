<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="?selectableItemBackground">

    <!--    <ImageView-->
    <!--        android:id="@+id/book_photo"-->
    <!--        android:layout_width="150sp"-->
    <!--        android:layout_height="150sp"-->
    <!--        android:src="@drawable/common_google_signin_btn_icon_dark"/>-->
    <!--    android:layout_toRightOf="@id/book_photo"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/search_item_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="Book Title" />

        <TextView
            android:id="@+id/search_item_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Book Author" />

        <TextView
            android:id="@+id/search_item_owner_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="Owned by ownerusername" />

        <TextView
            android:id="@+id/search_item_book_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            tools:text="Status" />

    </LinearLayout>

</RelativeLayout>