<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#f2f2f2">

        <ImageView
            android:id="@+id/book_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="35dp"
            android:contentDescription="Book Image"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/book_owner_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
           android:layout_below="@id/book_photo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_toEndOf="@id/book_photo"
            android:padding="5dp"
            android:layout_toRightOf="@id/book_photo">

            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="italic"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>